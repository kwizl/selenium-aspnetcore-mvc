@model Selenium.Models.Address

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Details Address</h2>
<br />

<form method="post" asp-action="Details">
    <div class="border bg-light p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="City" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="City"  readonly class="form-control" />
            </div>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MobilePhone" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="MobilePhone"  readonly class="form-control" />
            </div>
            <span asp-validation-for="MobilePhone" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="OfficePhone" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="OfficePhone"  readonly class="form-control" />
            </div>
            <span asp-validation-for="OfficePhone" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="OfficeEmail" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="OfficeEmail"  readonly class="form-control" />
            </div>
            <span asp-validation-for="OfficeEmail" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="OtherEmail" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="OtherEmail"  readonly class="form-control" />
            </div>
            <span asp-validation-for="OtherEmail" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PhysicalAddress" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="PhysicalAddress"  readonly class="form-control" />
            </div>
            <span asp-validation-for="PhysicalAddress" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PostalAddress" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="PostalAddress"  readonly class="form-control" />
            </div>
            <span asp-validation-for="PostalAddress" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_ViewAndBackToListButton" model="Model.AddressID" />
            </div>
        </div>
    </div>
</form>
