@model IEnumerable<Address>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br />
<div class="border bg-light p-3">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if(Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.MobilePhone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.OfficePhone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.OfficeEmail)
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.City)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.MobilePhone)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.OfficePhone)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.OfficeEmail)
                        </td>
                        <td>
                            <partial name="_TableButtonPartial" model="item.AddressID" />
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No Category exists</p>
        }
    </div>
</div>