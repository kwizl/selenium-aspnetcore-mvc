@model Selenium.Models.Currency

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Edit Currency</h2>
<br />

<form method="post" asp-action="Edit">
    <div class="border bg-light p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ISOCode" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="ISOCode" id="Update-Currency-ISOCode" class="form-control" />
            </div>
            <span asp-validation-for="ISOCode" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" id="Update-Currency-Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="NumericISOCode" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="NumericISOCode" id="Update-Currency-NumericISOCode" class="form-control" />
            </div>
            <span asp-validation-for="NumericISOCode" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="SystemCode" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="SystemCode" id="Update-Currency-SystemCode" class="form-control" />
            </div>
            <span asp-validation-for="SystemCode" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Symbol" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Symbol" id="Update-Currency-Symbol" class="form-control" />
            </div>
            <span asp-validation-for="Symbol" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Units" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Units" id="Update-Currency-Units" class="form-control" />
            </div>
            <span asp-validation-for="Units" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" id="Update-Currency-Button" class="btn btn-info form-control" asp-route-id="@Model" value="Update" />
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-success form-control">Back To List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>